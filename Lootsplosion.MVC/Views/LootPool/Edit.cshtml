                @Html.DropDownList("LootId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.LootId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.LootSourceId, htmlAttributes: new { @class = "control-label col-md-2" })
