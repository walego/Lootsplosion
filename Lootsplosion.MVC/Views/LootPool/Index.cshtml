            @Html.DisplayFor(modelItem => item.LootName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LootSourceId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LootSourceName)
        </td>
