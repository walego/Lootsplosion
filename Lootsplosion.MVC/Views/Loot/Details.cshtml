@model Lootsplosion.Models.Loot.LootDetail

@{
    ViewBag.Title = "Details";
}

<h2>@Html.DisplayFor(model=>model.LootName)</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.LootId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LootId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LootName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LootName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Rarity)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Rarity)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LootDescription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LootDescription)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.WorldDrop)
        </dt>

        <dd>
            @if (Model.WorldDrop == true)
            {
                <i class="fa fa-circle-check"></i>
            }
            @if (Model.WorldDrop != true)
            {
                <i class="fa fa-circle-xmark"></i>
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PoolsIn)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PoolsIn)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.LootId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
