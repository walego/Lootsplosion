@model IEnumerable<Lootsplosion.Models.Loot.LootListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Loot</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Create New Loot</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LootId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LootName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WorldDrop)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PoolsIn)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LootId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LootName)
            </td>
            <td>
                @if (item.WorldDrop == true)
                {
                    <i class="fa fa-circle-check"></i>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PoolsIn)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.LootId }) |
                @Html.ActionLink("Details", "Details", new { id = item.LootId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.LootId })
            </td>
        </tr>
    }

</table>
