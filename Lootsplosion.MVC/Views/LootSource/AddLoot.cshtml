@model Lootsplosion.Models.LootPool.LootPoolCreateFromSource

@{
    ViewBag.Title = "AddLoot";
}

<h2>Add Loot to Source</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.LootId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("LootId", null, htmlAttributes : new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.LootId, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.SecretRarity, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("SecretRarity", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SecretRarity, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Sources", "Index")
</div>
