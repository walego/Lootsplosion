@model Lootsplosion.Models.Enemy.EnemyDetail

@{
    ViewBag.Title = "Details";
}

<h2 class="text-center">@Html.DisplayFor(model=>model.EnemyName)</h2>

<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.EnemyDescription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EnemyDescription)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsBoss)
        </dt>

        <dd>
            @if (Model.IsBoss == true)
            {
                <i class="fa fa-circle-check"></i>
            }
            @if (Model.IsBoss != true)
            {
                <i class="fa fa-circle-xmark"></i>
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsElite)
        </dt>

        <dd>
            @if (Model.IsElite == true)
            {
                <i class="fa fa-circle-check"></i>
            }
            @if (Model.IsElite != true)
            {
                <i class="fa fa-circle-xmark"></i>
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Level)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Level)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Strength)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Strength)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Intelligence)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Intelligence)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Vitality)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Vitality)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Mobility)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Mobility)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CritChance)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CritChance)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.WorldPulls)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.WorldPulls)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Skills)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Skills)
        </dd>

    </dl>
</div>
<p class="text-center">
    @Html.ActionLink("Edit", "Edit", new { id = Model.EnemyId }) |
