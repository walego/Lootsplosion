@model Lootsplosion.Models.LootPull.DropdownId

@{
    ViewBag.Title = "LootSource";
}

<h2>Select Lootsplosion Options</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <p>Loot Source</p>
            <div class="col-md-10">
                @Html.DropDownList("SelectedId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SelectedId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lootsplode!" class="btn btn-default" />
            </div>
        </div>
    </div>
}

